<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">

    <Button
        android:id="@+id/resetTimer"
        android:layout_width="210dp"
        android:layout_height="54dp"
        android:layout_marginStart="101dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="176dp"
        android:text="Reset Timer"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timerTitle"
        android:layout_width="398dp"
        android:layout_height="58dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:text="Timer and Stopwatch"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/startAndPauseButton"
        android:layout_width="108dp"
        android:layout_height="101dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="83dp"
        app:layout_constraintBottom_toTopOf="@+id/resetTimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_media_play" />

    <TextView
        android:id="@+id/startAndPauseTitle"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="Start / Pause"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/startAndPauseButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="31dp"
        android:text="00 : 00"
        android:textAlignment="center"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@+id/startAndPauseTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timerTitle" />

    <EditText
        android:id="@+id/setTimerInput"
        android:layout_width="146dp"
        android:layout_height="58dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="67dp"
        android:ems="10"
        android:hint="Minutes"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/setTimerConfirm"
        app:layout_constraintEnd_toStartOf="@+id/startAndPauseButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/setTimerConfirm"
        android:layout_width="146dp"
        android:layout_height="54dp"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="90dp"
        android:text="Confirm"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/resetTimer"
        app:layout_constraintEnd_toStartOf="@+id/startAndPauseButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/setTimerTitle"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="31dp"
        android:text="Set Timer"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/setTimerInput"
        app:layout_constraintEnd_toStartOf="@+id/startAndPauseTitle"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>