<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer and Stopwatch"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="00 : 00"
            android:textAlignment="center"
            android:textSize="80dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/setTimerTitle"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:text="Set Timer"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/setTimerInputMin"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Minutes"
                    android:inputType="number"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/setTimerInputSec"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Seconds"
                    android:inputType="number"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/setTimerConfirm"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/startAndPauseTitle"
                    android:layout_width="146dp"
                    android:layout_height="wrap_content"
                    android:text="Start / Pause"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/startAndPauseButton"
                    android:layout_width="146dp"
                    android:layout_height="86dp"
                    app:srcCompat="@android:drawable/ic_media_play" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/resetTimer"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:layout_marginTop="15dp"
            android:text="Reset Timer"
            android:textSize="24sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>